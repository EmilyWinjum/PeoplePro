@model IEnumerable<PeoplePro.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.Employees.Count == 0)
                    {
                        <span>  None</span>
                    }
                    else
                    {
                        @foreach (var employee in item.Employees)
                        {
                            <span>
                                - @employee.FirstName<br>
                            </span>
                        }
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DepartmentId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DepartmentId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DepartmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal placeholder-->
<div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="addDepartmentLabel" aria-hidden="true" data-url="@Url.Action("AjaxCreate")">
    <div id="modal-content"></div>
</div>

<!-- Button Trigger Modal -->
<button type="button" class="btn btn-primary" id="show-modal">
    Add Department
</button>